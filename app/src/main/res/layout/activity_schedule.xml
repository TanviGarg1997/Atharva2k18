<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgath"
    android:orientation="vertical"
    tools:context=".Schedule">
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="Day 1"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp"
        android:background="@drawable/shadow"
        card_view:cardUseCompatPadding="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/abc"
            android:elevation="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1. Hakathon                          11-12 noon"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2. Auto Spark                        1-2 pm"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="3. Face It                                2-3 pm"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="Day 2"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp"
        android:background="@drawable/shadow"
        card_view:cardUseCompatPadding="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/abc"
            android:elevation="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1. Bridge Modelling              11-12 noon"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2. Gne Pitchers                      1-2 pm"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/info_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="3. Innovative Check              2-3 pm"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</LinearLayout>